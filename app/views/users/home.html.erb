<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<script>
$(document).ready(function(){
  $('a[data-toggle="pill"]').on('show.bs.tab', function(e) {
    localStorage.setItem('activeTab', $(e.target).attr('href'));
  });
  var activeTab = localStorage.getItem('activeTab');
  if(activeTab){
    $('#myTab a[href="' + activeTab + '"]').tab('show');
  }
});
</script>


<div class="head-candidates" style="padding-top: 26px;">
  <h3>Weekly inbox</h3>
  <p><b><%= @req.users.where(:matchings => {:status => "available" }).count %></b><%= + " " + @req.title.downcase%> this week</p>

</div>
<div class="class="affectedDiv>
  <div class="candidate_nav">
    <ul class="nav" id="myTab">
  <li class="nav-item">
    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-new" role="tab" aria-controls="pills-home" aria-selected="true">New(<%= @req.users.where(:matchings => {:status => "available" }).count %>)</a>
  </li>
