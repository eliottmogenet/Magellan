<div class="head-candidates" style="padding-top: 26px;">
  <h3>Weekly inbox</h3>
  <p><b><%= @users.count %></b> profiles this week</p>

</div>
<div class="candidate_nav">
  <ul class="nav">
  <li class="nav-item">
    <a class="nav-link active" id="pills-contact-tab" data-toggle="pill" href="#pills-new" role="tab" aria-controls="pills-home" aria-selected="true">New(<%= @req.users.count %>)</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-current" role="tab" aria-controls="pills-profile" aria-selected="false">Started</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-archived" role="tab" aria-controls="pills-contact" aria-selected="false">Archived</a>
  </li>
</ul>
</div>
<%= cl_image_tag("Line_6_u4e9nl", width: 320) %>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-new" role="tabpanel" aria-labelledby="pills-home-tab">


            <% @req.users.each do |user| %>
              <%= link_to req_user_path(user) do %>
                <div class="info">
                    <div class="photo">
                      <%= cl_image_tag user.photo.key, width: 55, height: 55 %>
                    </div>
                    <div class="description">
                    <p id="name"><%= user.first_name + " " + user.last_name %><p>
                    <p id= "job"><%= user.job %></p>
                    <p id="location"><%= user.city %></p>
                    </div>

                </div>
                <% end %>
                <%= cl_image_tag("Line_6_u4e9nl", width: 320) %>
            <% end %>
    </div>
</div>
