          <div class="comment">
            <p style="color: white; font-size: 9px"><%= analysis.comment %></p>
          </div>
        <% end %>
      </div>
        <%= cl_image_tag("Line_6_u4e9nl", width: 280, style: 'margin-left: 15px;') %>
  <% end %>

    </div>
    <div class="loca">
