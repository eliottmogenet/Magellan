                      <%= cl_image_tag @user.photo.key, width: 40, height: 40 %>
                    </div>
                    <div style="margin-left: 20px">
                      <p><b><%= @user.first_name %> at <%= experience.employer.name %></b></p>
                      <p style="color: grey;  line-height: 0px"><%= experience.started_at %> - <%= experience.end_at %></p>
                    </div>
